@model List<IGrouping<Qconcert.Models.Category, Qconcert.Models.Event>>

@{
    ViewData["Title"] = "Events";
}

<h2>Events</h2>

@foreach (var categoryGroup in Model)
{
    <div class="card mb-3">
        <div class="card-header">
            <h3>@categoryGroup.Key.Name</h3>
        </div>
        <div class="card-body">
            <div class="row">
                @foreach (var eventItem in categoryGroup)
                {
                    <div class="col-md-3 d-flex align-items-stretch">
                        <div class="card mb-3">
                            <a href="@Url.Action("Details", "AdminHome", new { id = eventItem.Id })">
                                <img src="data:image/jpeg;base64,@Convert.ToBase64String(eventItem.Image16x9)" class="card-img-top" alt="@eventItem.Name" />
                            </a>
                            <div class="card-body d-flex flex-column">
                                <h5 class="card-title" title="@eventItem.Name">@eventItem.Name</h5>
                                <p class="card-text">@eventItem.Description</p>
                            </div>
                            <div class="card-footer d-flex justify-content-between align-items-center">
                                <p class="card-text"><small class="text-muted">@eventItem.Date.ToString("dd/MM/yyyy")</small></p>
                                <div>
                                    <a href="@Url.Action("Edit", "AdminHome", new { id = eventItem.Id })" class="btn btn-warning">Sửa</a>
                                    <a href="@Url.Action("Delete", "AdminHome", new { id = eventItem.Id })" class="btn btn-danger">Xóa</a>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
}
@{
    Layout = "_Layout";
}

