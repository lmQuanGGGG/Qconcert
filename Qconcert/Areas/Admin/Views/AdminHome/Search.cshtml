@model IEnumerable<Qconcert.Models.Event>

@{
    ViewData["Title"] = "Search Results";
}

<h2>Search Results</h2>

<div class="row">
    @foreach (var eventItem in Model)
    {
        <div class="col-md-3 d-flex align-items-stretch">
            <div class="card mb-3">
                <a href="@Url.Action("Details", "Home", new { id = eventItem.Id })">
                    <img src="data:image/jpeg;base64,@Convert.ToBase64String(eventItem.Image16x9)" class="card-img-top" alt="@eventItem.Name" />
                </a>
                <div class="card-body d-flex flex-column">
                    <h5 class="card-title" title="@eventItem.Name">@eventItem.Name</h5>
                    <p class="card-text">@eventItem.Description</p>
                </div>
                <div class="card-footer">
                    <p class="card-text"><small class="text-muted">@eventItem.Date.ToString("dd/MM/yyyy")</small></p>
                    <div>
                        <a href="@Url.Action("Edit", "Home", new { id = eventItem.Id })" class="btn btn-warning">Edit</a>
                        <a href="@Url.Action("Delete", "Home", new { id = eventItem.Id })" class="btn btn-danger">Delete</a>
                    </div>
                </div>
            </div>
        </div>
    }
</div>

