@model IEnumerable<Qconcert.Models.Category>

<h2>Danh sách danh mục</h2>

<p>
    <a asp-area="Admin" asp-controller="Category" asp-action="Create" class="btn btn-outline-warning btn-sm mt-3" style="min-width: 80px;">Tạo danh mục</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>Tên danh mục</th>
            <th>Thao tác</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var category in Model)
        {
            <tr>
                <td>@category.Name</td>
                <td>
                    <a asp-action="Delete" asp-route-id="@category.Id" class="btn btn-outline-danger btn-sm" style="min-width: 80px;">Xóa</a>
                </td>
            </tr>
        }
    </tbody>
</table>
@{
    Layout = "_Layout";
}