@model Qconcert.Models.Category

<h2>Xóa danh mục</h2>

<h4>Bạn có chắc chắn muốn xóa danh mục này?</h4>
<hr />
<div>
    <h4>Danh mục</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Tên danh mục
        </dt>
        <dd class="col-sm-10">
            @Model.Name
        </dd>
    </dl>
</div>
<form asp-action="Delete">
    <input type="hidden" asp-for="Id" />
    <input type="submit" value="Xóa" class="btn btn-danger" /> |
    <a asp-action="Index" class="btn btn-secondary">Trở về danh sách</a>
</form>
