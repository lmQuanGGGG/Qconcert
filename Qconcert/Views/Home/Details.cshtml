@model Qconcert.Models.Event

<h2>Chi tiết sự kiện</h2>

<div class="card mt-4">
    <div class="card-header">
        Thông tin sự kiện
    </div>
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-2">
                Tên sự kiện
            </dt>
            <dd class="col-sm-10">
                @Model.Name
            </dd>
            <dt class="col-sm-2">
                Mô tả
            </dt>
            <dd class="col-sm-10">
                @Model.Description
            </dd>
            <dt class="col-sm-2">
                Ngày tổ chức
            </dt>
            <dd class="col-sm-10">
                @Model.Date.ToString("dd/MM/yyyy")
            </dd>
            <dt class="col-sm-2">
                Giá
            </dt>
            <dd class="col-sm-10">
                @Model.Price VNĐ
            </dd>
            <dt class="col-sm-2">
                Địa chỉ
            </dt>
            <dd class="col-sm-10">
                @Model.AddressDetail, @Model.Ward, @Model.District, @Model.Province
            </dd>
            <dt class="col-sm-2">
                Sức chứa
            </dt>
            <dd class="col-sm-10">
                @Model.Capacity
            </dd>
            <dt class="col-sm-2">
                Danh mục
            </dt>
            <dd class="col-sm-10">
                @Model.Category?.Name
            </dd>
        </dl>
    </div>
</div>

<div class="card mt-4">
    <div class="card-header d-flex justify-content-between align-items-center">
        Giới thiệu sự kiện
        <button class="btn btn-link p-0" type="button" data-bs-toggle="collapse" data-bs-target="#collapseEventInfo" aria-expanded="false" aria-controls="collapseEventInfo">
            <i class="bi bi-chevron-down"></i>
        </button>
    </div>
    <div class="collapse" id="collapseEventInfo">
        <div class="card-body">
            @Html.Raw(Model.EventInfo)
        </div>
    </div>
</div>

<div class="card mt-4">
    <div class="card-header">
        Thông tin ban tổ chức
    </div>
    <div class="card-body">
        <div class="row">
            <div class="col-md-3">
                @if (Model.OrganizerLogo != null)
                {
                    <img src="data:image/jpeg;base64,@Convert.ToBase64String(Model.OrganizerLogo)" style="width: 150px; height: 150px;" />
                }
            </div>
            <div class="col-md-9">
                <dl class="row">
                    <dt class="col-sm-4">
                        Tên ban tổ chức
                    </dt>
                    <dd class="col-sm-8">
                        @Model.OrganizerName
                    </dd>
                    <dt class="col-sm-4">
                        Giới thiệu ban tổ chức
                    </dt>
                    <dd class="col-sm-8">
                        @Html.Raw(Model.OrganizerInfo)
                    </dd>
                </dl>
            </div>
        </div>
    </div>
</div>

<div>
    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">Sửa</a>
    <a asp-action="Index" class="btn btn-secondary">Trở về danh sách</a>
</div>

